@model WorkOrderModel

@{
    ViewData["Title"] = "Appoint mechanic";
}
<div class="row">
    <div class="col-md-4">
        <form asp-action="AppointMechanic">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="CustomerName" />
            <input type="hidden" asp-for="PhoneNumber" />
            <input type="hidden" asp-for="CarPlateNumber" />
            <input type="hidden" asp-for="CarModel" />
            <input type="hidden" asp-for="Description" />
            <input type="hidden" asp-for="Price" />
            <input type="hidden" asp-for="StartDate" />
            <input type="hidden" asp-for="EndDate" />
            <input type="hidden" asp-for="Discount" />
            <input type="hidden" asp-for="ReRepair" />
            <div class="form-group">
                <label asp-for="MechanicName" class="control-label"></label>
                <select asp-for="MechanicId" asp-items="Model!.AvailableMechanics" class="form-control"></select>
                <span asp-validation-for="MechanicId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Appoint Mechanic" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

